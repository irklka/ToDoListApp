@model ToDoModel

<div class="card border-light border-left-0 border-top-0 border-right-0 bg-dark text-white m-1 p-1">
    <h3 class="card-title display-4">Title: @Model.Title</h3>
    <div class="bg-faded p-1">
        <h4>
            Creation Date: @Model.Description
        </h4>
        <h4>
            Creation Date: @Model.CreationDate - Due Date: @Model.PrettyDateTime()
        </h4>
        <h4>
            Status: @Model.Status
        </h4>
    </div>
    <span class="card-text p-2">
        <a class="btn btn-danger btn-sm pull-right float-right m-1" onclick="return confirm('Item will be deleted.')" asp-controller="ToDo" asp-action="Delete" asp-route-id="@Model.Id">
            Delete
        </a>
        <a class="btn btn-info btn-sm pull-right float-right m-1" asp-controller="ToDoList" asp-action="Details" asp-route-id="@Model.ToDoListId">
            Back
        </a>
        <a class="btn btn-info btn-sm pull-right float-right m-1"  asp-controller="ToDo" asp-action="Edit" asp-route-id="@Model.Id">
            Edit
        </a>
    </span>
</div>