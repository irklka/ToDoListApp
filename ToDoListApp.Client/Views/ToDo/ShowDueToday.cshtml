@model IEnumerable<ToDoModel>

<div class="bg-dark text-white">
    <p class="display-2">Todo's Due Today</p>
    <div class="card border-0 m-1 p-1 bg-dark">
        @if (Model.Count() == 0)
        {
            <h3>No Todo's To display</h3>
        }
        else
        {
            @foreach (var m in Model)
            {
                <partial name="ToDoView" model="m" />
            }
        }
    </div>
            <a class="btn btn-secondary btn-outline-light font-weight-bold float-right m-1" asp-controller="ToDoList" asp-action="Index">Back</a>

</div>