@model ToDoListModel
<form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="ToDoList">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="text-light">
        <div class="form-group">
            <h3>Create New To Do List</h3>
        </div>
        <div class="form-group text-light">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsVisible"></label>
            <input asp-for="IsVisible" type="checkbox" checked="checked" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary bg-dark btn-outline-light text-light font-weight-bold m-1" />
            <a class="btn btn-info btn-sm pull-right float-right m-1" asp-controller="ToDoList" asp-action="Index">Back</a>
        </div>
    </div>
</form>
