@model ToDoListModel
<form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="ToDoList">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="text-light">
        <div class="form-group">
            <h3>Create New To Do List</h3>
        </div>
        <div class="form-group text-light">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsVisible"></label>
            <input asp-for="IsVisible" type="checkbox" checked="true" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add ToDo List" class="btn btn-primary" />

            <a class="btn btn-primary float-right m-1" asp-controller="ToDoList" asp-action="Index">Back</a>
        </div>
    </div>
</form>
