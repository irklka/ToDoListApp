@model ToDoModel


<div class="card border-light border-left-0 border-top-0 border-right-0 bg-dark text-white m-1 p-1">
    <div class="panel panel-default">
        <div class="panel-heading card-title h1">Title: @Model.Title</div>
        <div class="panel-body badge badge-warning">
            <h6 class="float-left">Creation Date: @(Model.CreationDate.ToString("dd/MM/yy HH:mm"))</h6>
        </div>
        <div class="panel-body badge badge-success">
            <h6 class="float-left">Due Date: @Model.PrettyDateTime()</h6>
        </div>
    </div>
    <span class="card-text p-2">
        <a class="btn btn-danger btn-sm pull-right float-right m-1" onclick="return confirm('Item will be deleted.')" asp-controller="ToDo" asp-action="Delete" asp-route-id="@Model.Id">
            Delete
        </a>
        <a class="btn btn-info btn-sm pull-right float-right m-1" asp-controller="ToDo" asp-action="Details" asp-route-id="@Model.Id">
            Details
        </a>
        <a class="btn btn-info btn-sm pull-right float-right m-1"  asp-controller="ToDo" asp-action="Edit" asp-route-id="@Model.Id">
            Edit
        </a>
    </span>
</div>