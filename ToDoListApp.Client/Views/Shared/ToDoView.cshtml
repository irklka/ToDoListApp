@model ToDoModel


<div class="card border-light border-left-0 border-top-0 border-right-0 bg-dark text-white m-1 p-1">
    <div class="panel panel-default">
        <div class="panel-heading card-title h1">Title: @Model.Title</div>
        <div class="panel-body badge badge-warning">
            <h6 class="float-left">Creation Date: @(Model.CreationDate.ToString("dd/MM/yy HH:mm"))</h6>
        </div>
    <div class="badge badge-success float-right">
        <h6 class="float-left">Due Date: @(Model.DueDate.ToString("dd/MM/yy HH:mm"))</h6>
    </div>
    </div>
<span class="card-text p-1">
    <a class="btn btn-info btn-sm pull-right" style="float:right" asp-controller="ToDo" asp-action="Details" asp-route-id="@Model.Id">
        Details
    </a>
</span>
</div>